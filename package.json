{
  "private": true,
  "name": "@unstats/components",
  "version": "0.1.1",
  "description": "UNStats React Components",
  "homepage": "https://github.com/UNStats/components",
  "bugs": "https://github.com/UNStats/components/issues",
  "author": "Thilo Maier <maier@un.org>",
  "license": "MIT",
  "keywords": ["react", "components"],
  "main": "dist/index.js",
  "files": ["dist"],
  "lint-staged": {
    "*.{js,jsx,json,css,md}": ["prettier --write", "git add"]
  },
  "scripts": {
    "prebuild": "rimraf ./dist && rimraf *.tgz",
    "build":
      "cross-env NODE_ENV=production babel ./src -d ./dist --ignore test.js",
    "postbuild": "yarn pack",
    "format": "prettier --write \"src/**/*.{js,jsx,md}\"",
    "lint": "eslint src/**/*.{js,jsx}",
    "precommit": "lint-staged",
    "release": "release",
    "postrelease": "yarn run build && yarn run styleguide:deploy",
    "styleguide": "styleguidist server",
    "styleguide:deploy": "styleguidist build && gh-pages -d styleguide",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "rebass": "^1.0.4",
    "styled-components": "^2.1.2"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-styled-components": "^1.4.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "babel-runtime": "^6.23.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.6.1",
    "eslint-config-react-app": "^2.0.1",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "jsdom": "^11.5.1",
    "lint-staged": "^6.0.0",
    "prettier": "^1.9.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-styleguidist": "^6.1.0",
    "react-test-renderer": "^16.2.0",
    "release": "^3.0.3",
    "webpack": "^3.10.0"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/[A-Z]*.{js,jsx,mjs}"],
    "setupFiles": ["<rootDir>/config/enzyme.js", "<rootDir>/config/jsdom.js"],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ]
  },
  "babel": {
    "presets": ["env", "react"],
    "plugins": ["transform-class-properties", "styled-components"]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
