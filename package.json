{
  "private": true,
  "name": "@unstats/components",
  "version": "0.2.0",
  "description": "UNStats React Components",
  "homepage": "https://github.com/UNStats/components",
  "bugs": "https://github.com/UNStats/components/issues",
  "author": "Thilo Maier <maier@un.org>",
  "license": "MIT",
  "keywords": ["react", "components"],
  "main": "dist/index.js",
  "files": ["dist"],
  "scripts": {
    "start": "styleguidist server",
    "deploy": "styleguidist build && gh-pages -d styleguide",
    "prebuild": "rimraf ./dist && rimraf *.tgz",
    "build":
      "cross-env NODE_ENV=production babel ./src -d ./dist --ignore test.js",
    "postbuild": "yarn pack",
    "precommit": "pretty-quick --staged",
    "lint": "eslint .",
    "release": "release",
    "postrelease": "yarn run build && yarn run styleguide:deploy",
    "test": "react-scripts test --env=jsdom",
    "test:coverage": "react-scripts test --env=jsdom --coverage",
    "test:debug": "react-scripts --inspect-brk test --runInBand --env=jsdom"
  },
  "dependencies": {
    "prop-types": "^15.5.10",
    "rebass": "^1.0.4",
    "styled-components": "^3.1.5"
  },
  "peerDependencies": {
    "react": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-styled-components": "^1.4.0",
    "cross-env": "^5.1.3",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "gh-pages": "^1.1.0",
    "husky": "^0.14.3",
    "prettier": "^1.9.2",
    "pretty-quick": "^1.4.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-scripts": "^1.1.4",
    "react-styleguidist": "^6.1.0",
    "react-test-renderer": "^16.2.0",
    "release": "^3.0.3"
  },
  "jest": {
    "collectCoverageFrom": ["src/**/[A-Z]*.{js,jsx,mjs}"]
  },
  "babel": {
    "presets": ["react-app"],
    "plugins": ["styled-components"]
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
